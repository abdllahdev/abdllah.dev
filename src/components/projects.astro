---
import { cn } from "@/lib/cn";
import type { CollectionEntry } from "astro:content";

export interface Props {
  projects: CollectionEntry<"project">[];
}

const { projects } = Astro.props;
---

<section class="space-y-4">
  <h2 class="font-medium text-2xl">Projects</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2">
    {projects.map((project) => (
      <a href={project.data.link} target="_blank" class={cn("flex flex-col p-6 gap-y-2 justify-between min-h-full rounded-lg border bg-card text-card-foreground shadow-sm", {
        "hover:bg-muted": project.data.link
      })}>
        <div class="flex flex-col gap-y-2">
          <h3 class="text-xl font-semibold leading-none tracking-tight">
            {project.data.title}
          </h3>
          <p class="text-sm text-muted-foreground">{project.data.description}</p>
        </div>
        <ul class="text-sm text-muted-foreground flex gap-2">
          {project.data.tags.map((tag) => (<li class="underline underline-offset-2">{`#${tag}`}</li>))}
        </ul>
      </a>
    ))}
  </div>
</section>
