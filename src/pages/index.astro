---
import BaseLayout from "@/layouts/base-layout.astro";
import Projects from "@/components/projects.astro";
import { getCollection } from "astro:content";

import Posts from "@/components/posts.astro";
import SeriesList from "@/components/series-list.astro";
import Intro from "@/components/intro.astro";

const posts = await getCollection("blog");

const sortedPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .filter((post) => !post.data.planned && post.data.published)
  .slice(0, 3);

const featuredPosts = posts.filter((post) => post.data.featured && post.data.published);

const featuredSeries = (await getCollection("series")).filter((s) => s.data.featured && s.data.published);

const projects = await getCollection("project");
const sortedProjects = projects.sort((a, b) => a.data.index - b.data.index)
---

<BaseLayout>
  <div class="space-y-10">
    <Intro />    
    <Projects projects={sortedProjects} />
    
    <div class="space-y-4">
      <h3 class="font-medium text-2xl">Too many posts coming soon!</h3>
      <p>I've been trying to start writing but I can't find cool ideas but I will start writing about some cool stuff soon.</p>
    </div>

    {
      featuredPosts.length > 0 && (
        <div class="space-y-4">
          <div class="flex justify-between items-end">
            <h2 class="font-medium text-2xl">Featured Posts</h2>
            <a
              href="/blog"
              class="text-sm font-medium hover:underline underline-offset-2"
            >View all</a>
          </div>
          <Posts posts={featuredPosts} />
        </div>
      )
    }

    {
      sortedPosts.length > 0 && (
        <div class="space-y-4">
          <div class="flex justify-between items-end">
            <h2 class="font-medium text-2xl">Latest Posts</h2>
            <a
              href="/blog"
              class="text-sm font-medium hover:underline underline-offset-2"
            >View all</a>
          </div>
          <Posts posts={sortedPosts} />
        </div>
      )
    }

    {
      featuredSeries.length > 0 && (
        <div class="space-y-5">
          <div class="flex justify-between items-end">
            <h2 class="font-medium text-2xl">Featured Series</h2>
            <a
              href="/series"
              class="text-sm font-medium hover:underline underline-offset-2"
            >View all</a>
          </div>
          <SeriesList series={featuredSeries} />
        </div>
      )
    }
  </div>
</BaseLayout>
